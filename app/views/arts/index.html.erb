<%= provide(:title, '@art.title') %>

<span class="breadcrumbs">
<% breadcrumb :arts %>
</span>

<div class="grid-x page-top grid-margin-x">
<div class="cell small-12 medium-9 large-9">
<div class="grid-x grid-padding-x small-up-2 medium-up-3 large-up-3">
<% @art.each do |art| %>
<div class="cell">
<div class="card">
  <%= image_tag art.images[0].url %>
  <div class="card-section">
  <%= link_to art_path(art) do %>
  <h4><%= art.storename %></h4>
   <% if false %>
     (<%= REDIS.zscore("arts/", "#{art.id}").floor %>PV)
     <% end %>
  <% end %>
  <p class="cat-name cat-CULTURE"><%= art.area %></p>
  <p class="cat-name cat-CULTURE"><%= art.created_at.strftime("%Y年%m月%d日") %>
  </p>
  <span id="like-of-<%= art.id %>">
  <%= render partial: 'favorites/favorite', locals: { art: art, favorites: @favorites } %>
  </span>
  </div>
  </div>
  </div>
  <% end %>
  </div>
</div>

<div class="cell medium-3 large-3">
</div>

</div>
        <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
            <%= link_to tag.name, tag_path(:action => :tag, :tag => tag.name), :class => css_class %>
            <%= tag.count %>
        <% end %>