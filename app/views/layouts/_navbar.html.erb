<div class="title-bar" data-responsive-toggle="example-menu" data-hide-for="medium">
  <button class="menu-icon" type="button" data-toggle="example-menu"></button>
  <span class="title-bar-title"><%= image_tag("coffeeseeker.png", :size => "30x30", :alt => "アイコン") %><%= link_to 'COFFEE SEEKER', root_path %></span>
</div>

<div class="top-bar" id="example-menu">


  <span class="top-bar-left menu-text logo hide-for-small-only"><%= image_tag("coffeeseeker.png", :size => "30x30", :alt => "アイコン") %><%= link_to 'COFFEE SEEKER', root_path %></span>

  <div class="top-bar-right">
    <ul class="dropdown menu" data-dropdown-menu>
      <li><%= link_to 'HOME', root_path %></li>
      <li><%= link_to 'CAFE', index_path %></li>
      <li><%= link_to 'ABOUT', about_path %></li>
      <% if false %> 
      <li><%= link_to 'STORE', index_path %></li>
      <li><%= link_to 'CONTACT', index_path %></li>
      <% end %>
      <li>
      <%= link_to index_path do %>
      <i class="fi-torso"></i>
      <% end %>
      <% if current_user %>
      <ul class="menu">
        <li><%= link_to "Favorite", user_path(current_user.id) %></li>
        <li><%= link_to "Edit", edit_user_path(current_user.id) %></li>
        <li><%= link_to "Logout", :logout, method: :post %></li>
      </ul>
       <% else %>
       <ul class="menu">
        <li><%= link_to "Register", new_user_path %></li>
        <li><%= link_to "Login", :login %></li>
       </ul>
       <% end %>
      </li>
    </ul>
  </div>
  </div>