
<div class="grid-x grid-margin-x">
<div class="cell"><%= render 'bigtitle' %></div>
<div class="cell small-12 medium-9 large-9">
<div class="cell small-title">
<h5 class="readmore clear button secondary top-line">
<%= link_to 'Read more', index_path %></h5>
<h2>New Article</h2>
</div>
<div class="grid-x grid-padding-x small-up-2 medium-up-3 large-up-3">
<% @art.each do |art| %>
<div class="cell">
<div class="card">
  <%= image_tag art.images[0].url %>
  <div class="card-section">
  <%= link_to art_path(art) do %>
  <h4><%= art.storename %></h4>
  <% end %>
  <p class="cat-name cat-CULTURE"><%= art.area %></p>
  <p class="cat-name cat-CULTURE"><%= art.created_at.strftime("%Y/%m/%d") %></p>
   <p class="cat-name cat-CULTURE"><%= REDIS.zscore("arts/", "#{art.id}").floor %>PV</p>
  </div>
  </div>
  </div>
  <% end %>
  </div>

<div class="cell small-title">
<h2>Map</h2>
<%= render 'arts/map' %>
</div>

</div>

<div class="cell medium-3 large-3">

<h3 class="side-title">Ranking</h3> 
  <% @ranks.each.with_index do |art, i| %>

<h6 class="text-left ranking-number">No.<%= "#{i+1}" %></h6>
<div class="ranking-block">
<div class="ranking-image float-left"><%= image_tag art.images[0].url %></div>
<div class="ranking-text">
  <p class="cat-name cat-CULTURE"><%= art.created_at.strftime("%Y/%m/%d") %></p>
<%= link_to art_path(art) do %>
  <h6 class="ranking-title"><%= art.storename %></h6>
  <% end %>
  <p class="cat-name cat-CULTURE"><%= art.area %></p>
<p class="cat-name cat-CULTURE">(<%= REDIS.zscore("arts/", "#{art.id}").floor %>PV)</p>
</div>
 </div>
  <% end %>

<div><p class="text-left page-top">Area</p></div>
 <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
            <div class="button tiny"><%= link_to tag.name, tag_path(:action => :tag, :tag => tag.name), :class => css_class %>
            <%= tag.count %></div>
            <% end %>
<div><p class="text-left page-top">Coffee</p></div>
<% tag_cloud(@beans, %w(css1 css2 css3 css4)) do |tag, css_class| %>
            <div class="button tiny alert"><%= link_to tag.name, tag_path(:action => :tag, :tag => tag.name), :class => css_class %>
            <%= tag.count %></div>
            <% end %>
</div>
</div>
</div>
</div>